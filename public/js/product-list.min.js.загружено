$(document).ready(function(){ModuleProductList.hoverOnColor(),ModuleProductList.hoverOnProduct(),ModuleProductList.loadMore(),ModuleProductList.getProductsFromStorage(),$(".list__products .product:not(.out-off-stock) .product-image-hover").hover(function(){$(this).stop(!0).fadeTo(600,1)},function(){$(this).stop(!0).fadeTo(300,0)})});let ModuleProductList={hoverOnColor:function(){let e=$(".colors-background.colors > a");e.on("mouseover",function(){let e=$(this).data("second-image");$(this).parent().parent().find(".main-img-product").attr("src",e)}),e.on("mouseout",function(){let e=$(this).parent().parent().find(".main-img-product");e.attr("src",e.data("main-src"))})},hoverOnProduct:function(){var e="",t=document.getElementsByClassName("product"),o=document.getElementsByClassName("single-color"),s=document.getElementsByClassName("colors-background");function n(){this.querySelector('.single-color[data-count="0"]').classList.add("active"),this.getElementsByClassName("product-size-content-0")[0].classList.add("d-block")}function a(){this.querySelector('.single-color[data-count="0"]').classList.remove("active"),this.getElementsByClassName("product-size-content-0")[0].classList.remove("d-block")}!function(){for(var e=0;e<t.length;e++)t[e].addEventListener("mouseenter",n)}(),function(){for(var e=0;e<t.length;e++)t[e].addEventListener("mouseleave",a)}();for(var r=0;r<s.length;r++)s[r].addEventListener("mouseover",function(){for(var e=0;e<s.length;e++)s[e].removeEventListener("mouseover",n),s[e].removeEventListener("mouseleave",a)}),s[r].addEventListener("mouseleave",function(){if(e){for(var t=e.getElementsByClassName("product-size-content"),o=0;o<t.length;o++)t[o].classList.remove("d-block");var s=e.getElementsByClassName("single-color");for(o=0;o<s.length;o++)s[o].classList.remove("active");this.querySelector('.single-color[data-count="0"]').classList.add("active"),this.getElementsByClassName("product-size-content-0")[0].classList.add("d-block")}});for(r=0;r<o.length;r++)o[r].addEventListener("mouseenter",function(){for(var t=(e=this.closest(".product")).getElementsByClassName("single-color"),o=0;o<t.length;o++)t[o].classList.remove("active");this.classList.add("active");var s=e.getElementsByClassName("product-size-content");for(o=0;o<s.length;o++)s[o].classList.remove("d-block");e.getElementsByClassName("product-size-content-"+this.dataset.count)[0].classList.add("d-block")})},getProductsFromStorage:function(){var e=document.querySelector(".list__products");if(!e||"undefined"==typeof Storage)return!1;var t=sessionStorage.getItem("categoryURL"),o=sessionStorage.getItem("language");if(t!==window.location.href||o!==e.dataset.language)return sessionStorage.removeItem("categoryURL"),sessionStorage.removeItem("productsHtml"),sessionStorage.removeItem("paginationHtml"),sessionStorage.removeItem("language"),!1;var s=sessionStorage.getItem("productsHtml");s&&(e.innerHTML=s);var n=sessionStorage.getItem("paginationHtml");n&&(document.querySelector(".pagination").innerHTML=n)},updateQueryStringParameter:function(e,t,o){var s=new RegExp("([?&])"+t+"=.*?(&|$)","i"),n=-1!==e.indexOf("?")?"&":"?";return e.match(s)?e.replace(s,"$1"+t+"="+o+"$2"):e+n+t+"="+o},loadMore:function(){$("body").delegate(".pagination a.pagination-show-more","click",function(e){showMore("pagination-show-more");var t=document.getElementsByClassName("pagination-show-more")[0].dataset.nextPage;document.getElementsByClassName("product").length,e=window.location.href,e=ModuleProductList.updateQueryStringParameter(e,"page",t),$.ajax({url:e,type:"post",success:function(t){var o=document.createElement("div");o.innerHTML=t;for(var s=o.getElementsByClassName("product"),n=o.getElementsByClassName("pagination")[0],a=document.getElementsByClassName("list__products")[0],r=document.getElementsByClassName("pagination")[0],i=0;i<s.length;i++){var c=s[i].cloneNode(!0);a.appendChild(c)}if(r.innerHTML=n.innerHTML,ModuleProductList.hoverOnProduct(),ModuleProductList.hoverOnColor(),$(".list__products .product:not(.out-off-stock) .product-image-hover").hover(function(){$(this).stop(!0).fadeTo(600,1)},function(){$(this).stop(!0).fadeTo(300,0)}),window.history.pushState("","",e),a.innerHTML,n.innerHTML,"undefined"!=typeof Storage){var l=document.querySelector(".list__products").dataset.language;l&&sessionStorage.setItem("language",l),sessionStorage.setItem("categoryURL",window.location.href),sessionStorage.setItem("productsHtml",document.querySelector(".list__products").innerHTML),sessionStorage.setItem("paginationHtml",document.querySelector(".pagination").innerHTML)}}})}),showMore=function(e){document.getElementsByClassName(e)[0].classList.add("show-more--animated")}}};